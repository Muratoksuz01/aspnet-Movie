@model AdminGenresViewModel
<h1> admin genres list</h1>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Count</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach(var genre in Model.Genres){
        
       <tr>
        <td>@genre.GenreId</td>
        <td>@genre.Name</td>
        <td>@genre.Count </td>
        <td>
            <a href="/admin/UpdateGenre/@genre.GenreId" class="btn btn-primary btn-sm">Update</a>
            <a href="/admin/DeleteGenre/@genre.GenreId" class="btn btn-danger btn-sm">Delete</a>
        </td>
       </tr>
       }
    </tbody>
</table>