@model AdminGenreEditViewModel
<h1>edit genre</h1>
<hr>
<form action="">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">submit</button>
        </div>
        <div class="col-md-9">
            <table class="table table-striped table-hover tabel-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Title</th>
            <th>Genres</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model.Movies){
        <tr>
            <td>@movie.MovieId</td>
            <td><img width="80" src="~/img/@movie.ImageUrl" alt=""></td>
            <td>@movie.Title</td>
            
            <td>
                <a href="/admin/movieUpdate/@movie.MovieId" class="btn btn-primary btn-sm">Update</a>
                <a href="/admin/movieDelete/@movie.MovieId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table>
        </div>
    </div>
</form>