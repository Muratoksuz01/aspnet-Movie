@model AdminMoviesModelEdit
<form asp-action="movieUpdate" asp-controller="Admin" method="post"
  enctype="multipart/form-data" 
 >
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" name="MovieId" value="@Model.MovieId">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class=" text-danger"></span>

            </div>

            <div class="mb-3">
                <label for="formFile" class="form-label">Default file input example</label>
                <input class="form-control" name="file" type="file" id="formFile">
            </div>

            <button type="submit" class="btn btn-primary">kaydet</button>
        </div>
        <div class="col-md-4">

            @foreach (var item in (List<Genre>)ViewBag.Genres)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="genreids" value="@item.GenreId" id="@item.GenreId"
                    @(Model.SelectedGenres.Any(g => g.GenreId == item.GenreId) ? "checked" : "")>
                    <label class="form-check-label" for="@item.GenreId">
                        @item.Name
                    </label>
                </div>
            }
            <hr>
            <img src="~/img/@Model.ImageUrl">
        </div>
    </div>

</form>


