@model List<Genre>

<div class="list-group">
    <a href="/movie/list" class="list-group-item list-group-action">Tum Filimler</a>

    @foreach (var item in Model)
    {
        <a href="/movie/list/@item.GenreId" 
        class="list-group-item list-group-action  @((ViewBag.SelectId==item.GenreId.ToString()) ? "active": "")">
        @item.Name 
        </a>

    }
</div>