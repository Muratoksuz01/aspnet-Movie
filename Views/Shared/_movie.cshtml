@model Movie
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/img/@Model.Imageurl" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Model.Title </h5>
        <a class="btn btn-primary" href="/Movie/Details/@Model.MovieId">details</a>
        <a asp-action="Edit" asp-controller="Movie" asp-route-id="@Model.MovieId"   class="btn btn-warning ms-1">Edit</a>
        <a asp-action="Delete" asp-controller="Movie" asp-route-id="@Model.MovieId"   class="btn btn-success ms-1">Delete</a>
      </div>
    </div>
  </div>
</div>
